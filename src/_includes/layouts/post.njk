---
layout: base.njk
---

<article class="blog-post">
  <div class="blog-post-header">
    <div class="blog-post-meta">
      <time datetime="{{ date }}">{{ date | readableDate }}</time>
    </div>
    <h1 class="blog-post-title">{{ title }}</h1>
    {% if description %}
    <p class="blog-post-description">{{ description }}</p>
    {% endif %}
    {% if tags %}
    <div class="blog-tags">
      {% for tag in tags %}
        {% if tag != "post" %}
        <a href="/blog/tags/{{ tag | slugify }}/" class="blog-tag">{{ tag }}</a>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}
  </div>

  {% if featuredImage %}
  <div class="blog-post-image">
    <img src="{{ featuredImage }}" alt="{{ title }}" loading="lazy">
  </div>
  {% endif %}

  <div class="blog-post-content">
    {{ content | safe }}
  </div>

  <div class="blog-post-footer">
    <a href="/blog/" class="blog-back-link">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
      Back to all articles
    </a>
  </div>
</article>
