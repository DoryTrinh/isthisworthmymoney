---
pagination:
  data: collections.paginatedTagPages
  size: 1
  alias: tagPage
permalink: /blog/tags/{{ tagPage.slug }}/{% if tagPage.pageNumber > 0 %}{{ tagPage.pageNumber + 1 }}/{% endif %}
layout: base.njk
---

<div class="blog-tag-page-header">
  <a href="/blog/" class="blog-back-link" style="margin-bottom: 20px; display: inline-flex;">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
    All articles
  </a>
  <h1 class="blog-tag-page-title">Tagged: <span>{{ tagPage.tag }}</span></h1>
  <p class="blog-tag-page-count">{{ tagPage.totalPosts }} article(s)</p>
</div>

<div class="blog-post-list">
  {% for post in tagPage.posts %}
  <article class="blog-card">
    {% if post.data.featuredImage %}
    <a href="{{ post.url }}">
      <img class="blog-card-image" src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}" loading="lazy">
    </a>
    {% endif %}
    <div class="blog-card-body">
      <div class="blog-card-meta">{{ post.date | readableDate }}</div>
      <h2 class="blog-card-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <p class="blog-card-excerpt">{{ post.data.description or (post.content | excerpt) }}</p>
      {% if post.data.tags %}
      <div class="blog-card-tags">
        {% for t in post.data.tags %}
          {% if t != "post" %}
          <a href="/blog/tags/{{ t | slugify }}/" class="blog-tag">{{ t }}</a>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </article>
  {% endfor %}
</div>

{% if tagPage.totalPages > 1 %}
<nav class="blog-pagination" aria-label="Page navigation">
  {% if tagPage.pageNumber > 0 %}
  <a href="/blog/tags/{{ tagPage.slug }}/{% if tagPage.pageNumber > 1 %}{{ tagPage.pageNumber }}/{% endif %}" class="pagination-btn pagination-prev">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
    Previous
  </a>
  {% else %}
  <span class="pagination-btn pagination-prev disabled">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
    Previous
  </span>
  {% endif %}

  <div class="pagination-numbers">
    {% for i in range(0, tagPage.totalPages) %}
    {% if i == tagPage.pageNumber %}
    <span class="pagination-num active">{{ i + 1 }}</span>
    {% else %}
    <a href="/blog/tags/{{ tagPage.slug }}/{% if i > 0 %}{{ i + 1 }}/{% endif %}" class="pagination-num">{{ i + 1 }}</a>
    {% endif %}
    {% endfor %}
  </div>

  {% if tagPage.pageNumber < tagPage.totalPages - 1 %}
  <a href="/blog/tags/{{ tagPage.slug }}/{{ tagPage.pageNumber + 2 }}/" class="pagination-btn pagination-next">
    Next
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
  </a>
  {% else %}
  <span class="pagination-btn pagination-next disabled">
    Next
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
  </span>
  {% endif %}
</nav>
{% endif %}
